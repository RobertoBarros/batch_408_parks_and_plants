<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-4 mt-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= plant.image_url %>)">
          <%= plant.name %>
          <%= link_to plant_path(plant), method: :delete, class: 'card-remove-link', data: { confirm: 'VocÃª tem certeza que quer excluir essa bela planta?' } do %>
            <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>

</div>


<div class="container mt-5">

  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a plant</h4>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit 'Create Plant', class: 'btn btn-primary' %>
      <% end%>

    </div>
  </div>


</div>
